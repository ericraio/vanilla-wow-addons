<Bindings>
	<Binding name="NEEDYLIST_CURETOP" header="NEEDYLIST">
			NL_CureTopNeed("LeftButton");
	</Binding>
	<Binding name="NEEDYLIST_CURETOP_ALTERNATE" header="NEEDYLIST">
			NL_CureTopNeed("RightButton");
	</Binding>
	<Binding name="NEEDYLIST_SORTUNITS" header="NEEDYLIST">
			NL_SortList();
	</Binding>
	<Binding name="NEEDYLIST_MINIMIZE" header="NEEDYLIST">
			if( NLHeader:IsShown() ) then
				NLHeaderMinimized:Show();
			else
				NLHeader:Show();
			end
	</Binding>
	<Binding name="NEEDYLIST_CONFIGURE" header="NEEDYLIST">
			NLConfigNeedsFrame:Hide();
			NLConfigFrame:Show();
	</Binding>
</Bindings>
