<Bindings>
	<!--
		Version: <%version%>
		Revision: $Id: Bindings.xml,v 1.4 2005/08/24 21:24:27 islorgris Exp $
	-->
	<!-- User interface key bindings -->
	<Binding name="GATHERER_BINDING_QUICKMENU" runOnUp="false" header="GATHERER_BINDINGS_HEADER">
		if (GathererUI_Popup:IsVisible()) then
				GathererUI_HideMenu();
		else
				GathererUI_ShowMenu();
		end	
	</Binding>
	<Binding name="GATHERER_BINDING_OPTIONS" runOnUp="false">
		if ( GathererUI_DialogFrame:IsVisible() ) then
			GathererUI_HideOptions();
		else
			GathererUI_ShowOptions();
		end
	</Binding>
	<Binding name="GATHERER_BINDING_REPORT" runOnUp="false">
		showGathererInfo(1);
	</Binding>
	<Binding name="GATHERER_BINDING_SEARCH" runOnUp="false">
		showGathererInfo(2);
	</Binding>
</Bindings>

