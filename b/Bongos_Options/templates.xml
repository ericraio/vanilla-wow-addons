<Ui xmlns="http://www.blizzard.com/wow/ui/" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">

	<Frame name="BongosOptionsPanel" hidden="true" virtual="true">
		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset x="4" y="-32"/>
			</Anchor>
			<Anchor point="BOTTOMRIGHT">
				<Offset x="-4" y="4"/>
			</Anchor>
		</Anchors>
	</Frame>
	
	<Frame name="BongosOptionsDropDown" inherits="UIDropDownMenuTemplate" enableMouse="true" virtual="true">
		<Layers>
			<Layer level="BACKGROUND">
				<FontString name="$parentLabel" font="GameFontNormalSmall">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT">
							<Offset x="-12" y="0"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
	
	<Slider name="BongosOptionsSlider" inherits="BongosSlider" virtual="true">
		<Size x="214" y="18"/>
	</Slider>
	
	<Slider name="BongosOptionsOpacitySlider" inherits="BongosOpacitySlider" virtual="true">
		<Size x="214" y="18"/>
	</Slider>
	
	<Slider name="BongosOptionsScaleSlider" inherits="BongosScaleSlider" virtual="true">
		<Size x="214" y="18"/>
	</Slider>
</Ui>