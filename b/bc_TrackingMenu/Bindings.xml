<Bindings>
	<!-- User interface key bindings -->
	<Binding name="BCTM_BINDING_TOGGLE_MENU" runOnUp="false" header="BCTM_BINDINGS_HEADER">
		if (bcTM_Popup:IsVisible()) then
			if (bcTM_Config.HideOnButton == 1) then
				bcTM_HideMenu();
			end
		else
			if (bcTM_Config.ShowOnButton == 1) then
				bcTM_ShowMenu();
			end
		end
	</Binding>
