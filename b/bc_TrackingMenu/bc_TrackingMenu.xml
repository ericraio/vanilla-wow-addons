					<Anchor point="TOP" relativeTo="bcTM_PopupButton8" relativePoint="BOTTOM"/>
				</Anchors>
			</Button>
			<Button name="bcTM_PopupButton10" inherits="bcTM_PopupButtonTemplate" id="10">
