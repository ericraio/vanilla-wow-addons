<Ui xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/FrameXML/UI.xsd">

	<Script file="AceGUIEditBox.lua"/>

	<EditBox name="AceGUIEditBoxTemplate" autoFocus="false" enableMouse="true" virtual="true">
		<Scripts>
			<OnEditFocusGained>
				this:CallHandler("OnEditFocusGained")
			</OnEditFocusGained>
			<OnEditFocusLost>
				this:CallHandler("OnEditFocusLost")
			</OnEditFocusLost>
			<OnEnterPressed>
				this:CallHandler("OnEnterPressed")
			</OnEnterPressed>
			<OnEscapePressed>
				this:CallHandler("OnEscapePressed")
			</OnEscapePressed>
		</Scripts>
		<FontString inherits="GameFontHighlight"/>
	</EditBox>

	<EditBox name="AceGUIInputBoxTemplate" autoFocus="false" inherits="InputBoxTemplate" virtual="true">
		<Layers>
			<Layer level="BACKGROUND">
				<FontString name="$parentLabel" inherits="GameFontNormalSmall">
					<Anchors>
						<Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="-2" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<FontString inherits="GameFontHighlight"/>
		<Scripts>
			<OnEditFocusGained>
				this:CallHandler("OnEditFocusGained")
			</OnEditFocusGained>
			<OnEditFocusLost>
				this:CallHandler("OnEditFocusLost")
			</OnEditFocusLost>
			<OnEnterPressed>
				this:CallHandler("OnEnterPressed")
			</OnEnterPressed>
			<OnEscapePressed>
				this:CallHandler("OnEscapePressed")
			</OnEscapePressed>
		</Scripts>
	</EditBox>
</Ui>