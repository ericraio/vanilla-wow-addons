			<OnLoad>
				this:SetFrameLevel(this:GetParent():GetParent():GetFrameLevel()+4);
				this:SetText(tD_Loc.profile[this:GetID()]);
			</OnLoad>
			<OnClick>
				tradeDispenserPlaySound(this)
				local f=getglobal(this:GetParent():GetParent():GetName().."DDTitleLbL");
