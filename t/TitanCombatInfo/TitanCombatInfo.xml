				</Scripts>
			</Button>
			<GameTooltip name="TitanCombatInfo_Tooltip" frameStrata="TOOLTIP" hidden="true" inherits="GameTooltipTemplate">
			    <Scripts>
			        <OnLoad>
			            TitanCombatInfo_Tooltip:SetOwner(UIParent, "ANCHOR_NONE");
