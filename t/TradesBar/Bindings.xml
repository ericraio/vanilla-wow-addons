<Bindings>
	<!-- Bindings.xml  file for TradesBar -->
	<!-- Show me my config ... Sweetness! -->
  	<Binding name="Load TradesBar Config" header="TRADESBAR">
  		TradesBarConfig:Show();
  	</Binding>
	<!-- end -->
	<!-- Hide/Unhide the Bar -->
  	<Binding name="Hide/Unhide TradesBar">
     local frame = getglobal("TradesBar");
     if (frame) then
       if(  frame:IsVisible() ) then
         frame:Hide();
       else
         frame:Show();
       end
     end
  	</Binding>
	<!-- end -->
