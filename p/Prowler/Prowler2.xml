					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="13" y="-310"/>
						</Offset>
					</Anchor>
				</Anchors>      
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Text"):SetText("Bear and Charge");
						getglobal(this:GetName()):SetChecked(charg_toggle);
					</OnLoad>
					<OnClick>
