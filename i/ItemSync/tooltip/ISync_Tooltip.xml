	<Frame name="ISync_ItemRefTooltipIcon" parent="ItemRefTooltip" hidden="true">
		<Size>
			<AbsDimension x="39" y="39"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parentTexture">
					<Size>
						<AbsDimension x="39" y="39"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="0"/>
