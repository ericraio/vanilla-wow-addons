<Bindings>
	<Binding name="Options Menu" header="SMARTPET">
		SmartPetOptions_Toggle();
	</Binding>
	
	<Binding name="TOGGLETAUNT">
		if (UnitClass("player") == "Hunter") then
			SmartPet_TauntToggle();
		end
	</Binding>

	<Binding name="CHASETOGGLE">
		SmartPet_OnSlashCommand(SMARTPET_NOCHASE);
	</Binding>

	<Binding name="SCATTERSHOT">
		SmartPetScatterShot();
	</Binding>

	<Binding name="The Button">
		SmartPetTheButton();
	</Binding>
</Bindings>