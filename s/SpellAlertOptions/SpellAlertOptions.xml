			<OnMouseUp>
				if ( this.isMoving ) then
					this:StopMovingOrSizing();
					this.isMoving = false;
				end
			</OnMouseUp>
			<OnMouseDown>
				if (arg1 == "LeftButton") then
					this:StartMoving();
					this.isMoving = true;
				end
			</OnMouseDown>
			<OnHide>
				if ( this.isMoving ) then
